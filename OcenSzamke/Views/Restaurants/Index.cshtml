@using OcenSzamke.Models
@model IEnumerable<OcenSzamke.Models.Restaurant>
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager


<div class="container mt-4">
    <div class="d-flex justify-content-between">
        <div>
            <a asp-action="Create" class="btn btn-primary">Dodaj Nową Restaurację</a>
            <a asp-action="Index" asp-controller="Home" class="btn btn-info">Strona Główna</a>
        </div>
        <div>
            @if (User?.Identity?.IsAuthenticated == true)
            {
                <form method="post" asp-area="Identity" asp-page="/Account/Logout" asp-handler="Logout" asp-route-returnUrl="/">
                    <button type="submit" class="btn btn-warning">Wyloguj</button>
                </form>
            }
        </div>
    </div>

    <form asp-action="Index" method="get" class="form-inline my-2 my-lg-0 mt-3">
        <input class="form-control mr-sm-2" type="text" name="searchString" placeholder="Szukaj restauracji" aria-label="Search">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Szukaj</button>
    </form>

    <h2 class="mt-3">Restauracje</h2>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Nazwa</th>
                <th>Adres</th>
                <th>Średnia Ocena</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Address)</td>
                    <td>@item.AverageRating</td>
                    <td>
                        @Html.ActionLink("Szczegóły", "Details", new { id = item.RestaurantId }, new { @class = "btn btn-link" })
                        @if (User?.Identity?.IsAuthenticated == true && item.UserId == UserManager.GetUserId(User))
                        {
                            @Html.ActionLink("Edytuj", "Edit", new { id = item.RestaurantId }, new { @class = "btn btn-link" })
                            @Html.ActionLink("Usuń", "Delete", new { id = item.RestaurantId }, new { @class = "btn btn-link" })
                        }
                        @if (User?.Identity?.IsAuthenticated == true)
                        {
                            @Html.ActionLink("Dodaj Recenzję", "CreateReview", new { restaurantId = item.RestaurantId }, new { @class = "btn btn-link" })

                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
