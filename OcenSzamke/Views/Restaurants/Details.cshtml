@model OcenSzamke.Models.Restaurant

<h2>Szczegóły restauracji</h2>

<div>
    <h4>Restauracja</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nazwa
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Adres
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            Średnia ocena
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AverageRating)
        </dd>
    </dl>
    <h4>Recenzje</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Ocena</th>
                <th>Komentarz</th>
                <th>Data</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var review in Model.Reviews)
            {
                <tr>
                    <td>@review.Rating</td>
                    <td>@review.Comment</td>
                    <td>@review.DatePosted.ToString("dd-MM-yyyy")</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    <a asp-action="Index">Powrót do listy</a>
</div>
