@model OcenSzamke.Models.Restaurant

@{
    ViewData["Title"] = "Create";
}

<div class="create-container">
    <div class="form-container">
        <form asp-action="Create">
            <h2 class="text-custom">Dodaj Nową Restaurację</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                <input asp-for="Name" class="form-control" placeholder="Nazwa restauracji" />
                <label asp-for="Name">Nazwa</label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Address" class="form-control" placeholder="Adres restauracji" />
                <label asp-for="Address">Adres</label>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-custom w-100">Dodaj</button>
        </form>
        <a asp-action="Index" class="btn btn-link-custom mt-3">Powrót do Listy</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
